@model IEnumerable<Category>
@{
    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "All Categories";
}
    
<a asp-action="Create" class="btn btn-primary">Add New Category</a>


<table class="table table-hover" width="100%">
    <thead>
        <tr>
            <td>Name</td>
            <td>Description</td>
            <td>Date Created</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @if(Model.Count() == 0)
        {
            <tr>
                <td colspan="3">No Categories Exist!</td>
            </tr>
        }
        else
        {
            foreach(var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td>@category.CreateAt</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>

                    </td>
                </tr>
            }
        }
    </tbody>
    
</table>